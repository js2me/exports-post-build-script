{
  "compilerOptions": {
    "types": ["node"],
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types/", "./types", "./node_modules"
    ],
    "noEmit": false
  },
  "include": [
    "src"
  ]
}
